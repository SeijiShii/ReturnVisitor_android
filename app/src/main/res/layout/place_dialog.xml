<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TitleFrame = "http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Name Text -->
    <net.c_kogyo.returnvisitor.view.TitleFrameView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        TitleFrame:Title="@string/name">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_text"
            android:textSize="15sp"
            android:inputType="textNoSuggestions|textMultiLine"
            android:background="#0000"
            android:minHeight="60dp"/>

    </net.c_kogyo.returnvisitor.view.TitleFrameView>

    <!-- Address Text -->
    <net.c_kogyo.returnvisitor.view.TitleFrameView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        TitleFrame:Title="@string/address">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address_text"
            android:textSize="15sp"
            android:inputType="textNoSuggestions|textMultiLine"
            android:background="#0000"
            android:minHeight="60dp"/>

    </net.c_kogyo.returnvisitor.view.TitleFrameView>

    <!-- Coordinate -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coordinate"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/coordinate_text"
        android:textSize="12sp"/>


</LinearLayout>