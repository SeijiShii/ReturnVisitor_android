<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gray_trans_circle"
        android:layout_margin="10dp"
        android:padding="5dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:id="@+id/email_text"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:background="#00000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_color_normal"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:id="@+id/password_text"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:background="#00000000"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/login_button"
            android:text="@string/login"
            android:textColor="@color/text_color_normal"
            android:background="@drawable/trans_green_selector"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/or_text"
        android:textColor="@color/text_color_normal"
        android:textSize="15sp"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="200dp"
            android:layout_height="@dimen/button_height"
            android:textSize="15sp"
            android:text="@string/sign_in_text"
            android:drawableLeft="@drawable/google_logo"
            android:layout_centerInParent="true"
            android:background="@drawable/white_gray_selector"
            android:textColor="@color/text_color_normal"
            android:padding="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="200dp"
            android:layout_height="@dimen/button_height"
            android:textSize="10sp"
            android:text="@string/log_in_fb"
            android:drawableLeft="@drawable/fb_white_logo"
            android:layout_centerInParent="true"
            android:background="@drawable/fb_blue_selector"
            android:textColor="#FFF"
            android:padding="5dp"/>

    </RelativeLayout>


</LinearLayout>