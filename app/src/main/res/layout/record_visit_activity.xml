<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titleFrame= "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/AppTheme">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme"
        android:title="@string/record_visit"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <net.c_kogyo.returnvisitor.view.TitleFrameView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                titleFrame:Title="@string/place"
                titleFrame:PlaceholderText="@string/touch_here"
                titleFrame:ShowPlaceholder="true"
                android:id="@+id/place_frame">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/place_text"
                    android:textSize="20sp"
                    android:text="Place Text Test"
                    android:background="#F00"/>

                </net.c_kogyo.returnvisitor.view.TitleFrameView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>