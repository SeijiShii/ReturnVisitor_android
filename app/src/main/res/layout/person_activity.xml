<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titleFrame= "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/AppTheme"
    android:background="#FFF">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <!-- Name Text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:id="@+id/name_text"
                android:background="@drawable/gray_trans_circle"
                android:padding="5dp"
                android:hint="@string/name"
                android:inputType="textFilter"/>

            <!-- Sex Radio Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/male"
                        android:id="@+id/male_button"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/female"
                        android:id="@+id/female_button"/>

                </RelativeLayout>


            </LinearLayout>

            <!-- Age Spinner -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/age"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"
                    android:textColor="@color/text_color_normal"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:id="@+id/age_spinner"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <!-- Interest Rater -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rater_container"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <!-- Interest State Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:gravity="center"
                android:id="@+id/interest_state_text"/>

            <!-- Note -->
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/note_text"
                android:background="@drawable/gray_trans_circle"
                android:padding="5dp"
                android:hint="@string/note"
                android:inputType="textMultiLine"
                android:minHeight="60dp"
                android:gravity="left|top"/>

            <!-- OK -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="@string/ok_text"
                    android:background="@drawable/trans_green_selector"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_alignParentRight="true"
                    android:id="@+id/ok_button"/>

            </RelativeLayout>

            <!-- Cancel -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="@string/cancel_text"
                    android:background="@drawable/trans_orange_selector"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentRight="true"
                    android:id="@+id/cancel_button"/>

            </RelativeLayout>

            <!-- Delete -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="@string/delete"
                    android:background="@drawable/trans_red_selector"
                    android:textColor="#F00"
                    android:layout_alignParentRight="true"
                    android:id="@+id/delete_button"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

