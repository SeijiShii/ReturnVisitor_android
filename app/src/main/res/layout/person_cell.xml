<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_trans_circle"
    android:padding="3dp"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/rater_mark"
            android:contentDescription="@string/rater_marker"/>

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/person_text"/>

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="match_parent">

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/remove_button_selector"
                android:id="@+id/remove_button"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>

    <net.c_kogyo.returnvisitor.view.TagContainer
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/tag_container"/>

</LinearLayout>